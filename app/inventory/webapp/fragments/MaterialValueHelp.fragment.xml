<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">  
    <SelectDialog
        id="_materialDialog"
        noDataText="Loading..."
        title="Select Material"
        liveChange=".onMaterialFilterSearch"
        search=".onMaterialFilterSearch"
        confirm="onMaterialValueHelpClose"
        cancel="onMaterialValueHelpClose"
        items="{/Material}"
        initialFocus="SearchField"
        multiSelect="false"
        contentWidth="480px"
        
    >
        
        <StandardListItem 
            
            title="{Description}"
            info="{MaterialCode}"
            description="{Category}"

            iconDensityAware="false"
            iconInset="false"
            type="Active" />
            
    </SelectDialog>
</core:FragmentDefinition>